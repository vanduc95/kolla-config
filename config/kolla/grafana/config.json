{
    "command": "/usr/sbin/grafana-server --config=/etc/grafana/grafana.ini",
    "config_files": [
        {
            "source": "/var/lib/kolla/config_files/grafana.ini",
            "dest": "/etc/grafana/grafana.ini",
            "owner": "grafana",
            "perm": "0600"
        },
        {
            "source": "/var/lib/kolla/config_files/grafana_home_dashboard.json",
            "dest": "/usr/share/grafana/public/dashboards/home.json",
            "owner": "root",
            "perm": "0644",
            "optional": true
        },
        {
            "source": "/var/lib/kolla/config_files/prometheus.yaml",
            "dest": "/etc/grafana/provisioning/datasources/prometheus.yaml",
            "owner": "root",
            "perm": "0644",
            "optional": true
        },
        {
            "source": "/var/lib/kolla/config_files/provisioning.yaml",
            "dest": "/etc/grafana/provisioning/dashboards/provisioning.yaml",
            "owner": "root",
            "perm": "0644"
        },
        {
            "source": "/var/lib/kolla/config_files/dashboards/",
            "dest": "/var/lib/grafana/dashboards",
            "owner": "grafana",
            "perm": "0755",
            "optional": true
        }
    ],
    "permissions": [
        {
            "path": "/var/lib/grafana",
            "owner": "grafana:grafana",
            "recurse": true
        },
        {
            "path": "/var/log/kolla/grafana",
            "owner": "grafana:grafana",
            "recurse": true
        }
    ]
}
